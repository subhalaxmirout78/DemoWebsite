                            <li>
                                <a href="/Admin/RoleManagement">Role Management</a>
                            </li>
                            <li>
                                <a href="/Admin/UserRoleManagement">Assign Roles</a>
                            </li>
                        </ul>
                        <!-- second-level-items -->
                    </li>

                </ul>
                <!-- end side-menu -->
            </div>
            <!-- end sidebar-collapse -->
        </nav>
        <!-- end navbar side -->
        <!--  page-wrapper -->
        <div id="page-wrapper">
            @RenderBody()




        </div>
        <!-- end page-wrapper -->

    </div>

