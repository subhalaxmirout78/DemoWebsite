    <link href="~/template/admin/assets/css/style.css" rel="stylesheet" />
    <link href="~/template/admin/assets/css/main-style.css" rel="stylesheet" />

    <link href="~/Scripts/jqwidgets/styles/jqx.base.min.css" rel="stylesheet" />
    <link href="~/Scripts/jqwidgets/styles/jqx.ui-redmond.min.css" rel="stylesheet" />


