                        <i class="fa fa-user fa-3x"></i>
                    </a>
                    <!-- dropdown user-->
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="/User/Profile"><i class="fa fa-user fa-fw"></i>User Profile</a>
